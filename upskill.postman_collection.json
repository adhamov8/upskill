            "method": "POST",
            "url": { "raw": "{{baseUrl}}/mentor/requests/1/decline", "host": ["{{baseUrl}}"], "path": ["mentor","requests","1","decline"] }
          }
        },
        {
          "name": "Mentor → Mentees",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/mentor/mentees", "host": ["{{baseUrl}}"], "path": ["mentor","mentees"] } }
        },
        {
          "name": "Student → Mentors",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/student/mentors", "host": ["{{baseUrl}}"], "path": ["student","mentors"] } }
        }
      ]
    },
    {
      "name": "Chat",
      "item": [
        {
          "name": "Global → history",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/chat/global/messages", "host": ["{{baseUrl}}"], "path": ["chat","global","messages"] } }
        },
        {
          "name": "Global → post",
          "request": {
            "method": "POST",
