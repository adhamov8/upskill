            "url": { "raw": "{{baseUrl}}/chat/global/messages", "host": ["{{baseUrl}}"], "path": ["chat","global","messages"] },
            "body": { "mode": "raw", "raw": "{\n  \"message\": \"Hello, world!\"\n}" }
          }
        },
        {
          "name": "Conversations → list",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/chat/conversations", "host": ["{{baseUrl}}"], "path": ["chat","conversations"] } }
        },
        {
          "name": "Conversation → history (id=1)",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/chat/conversations/1/messages", "host": ["{{baseUrl}}"], "path": ["chat","conversations","1","messages"] } }
        },
        {
          "name": "Conversation → post (id=1)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/chat/conversations/1/messages", "host": ["{{baseUrl}}"], "path": ["chat","conversations","1","messages"] },
            "body": { "mode": "raw", "raw": "{\n  \"message\": \"Hi from Postman\"\n}" }
          }
        }
      ]
    },
    {
      "name": "Plans",
      "item": [
        {
          "name": "Generate",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/plans/generate", "host": ["{{baseUrl}}"], "path": ["plans","generate"] },
            "body": { "mode": "raw", "raw": "{\n  \"title\": \"Golang Basics\",\n  \"start\": \"2025-09-05T09:00:00Z\",\n  \"days\": 3\n}" }
          }
        },
        {
          "name": "List",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/plans", "host": ["{{baseUrl}}"], "path": ["plans"] } }
        },
        {
          "name": "Get (id=1)",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/plans/1", "host": ["{{baseUrl}}"], "path": ["plans","1"] } }
        },
        {
          "name": "Complete task (plan=1, task=1)",
          "request": {
            "method": "POST",
            "url": { "raw": "{{baseUrl}}/plans/1/tasks/1/complete", "host": ["{{baseUrl}}"], "path": ["plans","1","tasks","1","complete"] }
          }
        }
      ]
    }
  ]
}
